<h1 class="mt-4 text-center">Categories list</h1>
<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
  <div class="container">

    <% @categories.each do |category|  %>
      <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body font-italic">
           <h4 class="card-title"> <%= link_to category.name, category, class: "text-success"  %></h4>
          </div>
          <div class="card-footer text-muted">
          <small>Joined <%= time_ago_in_words(category.created_at ) %> ago </small>
          </div>
        </div>
        </div>
      </div>
    <% end %>


  </div>
  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
