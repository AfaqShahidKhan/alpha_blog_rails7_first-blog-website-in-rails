
<div class="container">
  <% if @article.errors.any? %>

    <h2>The following errors are preventing details from saving</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>

  <% end %>
  <div class="row justify-content-center">

   <div class="col-10">
      <%= form_with(model: @article,class:"shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
        <div class="form-group row">

          <%= f.label :title,  class:"col-2 col-form-lable" %>

            <div class="col-10">
            <%= f.text_field :title, class:"form control shadow rounded", placeholder:"Enter Title" %>
            </div>

        </div>
          <div class="form-group row">
            <%= f.label :description, class:"col-2 col-form-lable" %>
            <%= f.text_area :description,rows:10, class:"form control shadow rounded",placeholder:"Enter Description here ..." %>
          </div>
          <div class="form-group row">
            <%= f.submit class:"btn btn-outline-light btn-lg mt-2"%>
          </div>

      <% end %>

    <%= link_to "[ Cancel and Back to Articles ]", articles_path, class:"text-primary" %>
  </div>
 </div>
