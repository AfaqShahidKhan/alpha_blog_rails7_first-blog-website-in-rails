<div class="container">

<%= render "shared/errors", obj: @user  %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user, class: "user-form shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter username" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Make a password" %>
          </div>
       </div>

        <div class="form-group row justify-content-center">
           <div class="">
              <%= f.submit(@user.new_record? ?  "Sign Up" : "Update User", class:"btn btn-outline-light btn-lg mt-2" ) %>
          </div>

        </div>
      <% end %>
    </div>

    <%= link_to "Cancel and Back to users", users_path,  class:"text-primary" %>
  </div>
</div>
